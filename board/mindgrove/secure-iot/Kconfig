if TARGET_SECURE_IOT

config SYS_BOARD
	default "secure-iot"

config SYS_VENDOR
	default "mindgrove"

config SYS_CPU
	default "generic"

config SYS_CONFIG_NAME
	default "mindgrove-secure-iot"

config SYS_TEXT_BASE
	default 0x80200000 if SPL
	default 0x80000000 if !RISCV_SMODE
	default 0x80200000 if RISCV_SMODE

config SPL_TEXT_BASE
	default 0x08000000

config SPL_OPENSBI_LOAD_ADDR
	default 0x80000000

config SYS_TEXT_BASE
	default 0x08000000

config SYS_LOAD_ADDR
	default 0x80000000

config BOARD_SPECIFIC_OPTIONS # dummy
	def_bool y
	select GENERIC_RISCV
	select RISCV_MMODE
	select RISCV_SMODE
	select RAM
    imply MINDGROVE_SERIAL
	imply SPL
	imply SPL_RISCV_MMODE
	imply SPL_OPENSBI
	imply SPL_LOAD_FIT
endif
